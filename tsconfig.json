{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "target": "es2017",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
